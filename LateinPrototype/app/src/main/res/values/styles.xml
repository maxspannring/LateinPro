<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/LPorange</item>
        <item name="colorPrimaryDark">@android:color/holo_orange_light</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/LPorange</item>
    </style>

    <!-- The launcher theme. It sets the main window background to the launch_screen drawable -->
    <style name="AppTheme.Launcher" parent="Theme.AppCompat.NoActionBar">
        <item name= "android:windowBackground">@drawable/launcher_screen</item>
        <!-- Optional, on Android 5+ you can modify the colorPrimaryDark color to match the windowBackground color for further branding-->
        <item name="colorPrimaryDark">@android:color/holo_orange_light</item>
    </style>
    <!--Splash Screen-->
    <style name="AppTheme.SplashScreen" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

</resources>
